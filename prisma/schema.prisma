generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  name     String?
}

model Product {
  id        Int           @id @default(autoincrement())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  name      String
  price     Float
  image     String
  sizes     ProductSize[]
}

model ProductSize {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  stock     Int
  price     Float
  discount  Float
  image     String
}
